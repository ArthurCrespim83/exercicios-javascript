function adicionarItem(itens, item) {
  itens.push(item)
  return itens
}

function exportarMinusculasCSV(itens) {
  const itensMinusculos = itens.map(function (item) {
    return String(item).toLowerCase();
  });
  let csv = itensMinusculos.join(", ");

  return csv;
}

////////////////////////////////////////////////

// Exemplo de uso
let minhaLista = ["P√ÉO", "Leite", "QUEIJO"];

// Adicionar um item
